# Roomler2 Configuration
# Copy to .env and fill in values

# Application
ROOMLER__APP__HOST=0.0.0.0
ROOMLER__APP__PORT=3000

# Database
ROOMLER__DATABASE__URL=mongodb://roomler:roomler_pass@localhost:27017/roomler2?authSource=admin
ROOMLER__DATABASE__NAME=roomler2

# JWT
ROOMLER__JWT__SECRET=change-me-in-production-use-a-long-random-string
ROOMLER__JWT__ACCESS_TOKEN_TTL_SECS=3600
ROOMLER__JWT__REFRESH_TOKEN_TTL_SECS=604800
ROOMLER__JWT__ISSUER=roomler2

# Redis
ROOMLER__REDIS__URL=redis://localhost:6379

# S3 / MinIO
ROOMLER__S3__ENDPOINT=http://localhost:9000
ROOMLER__S3__ACCESS_KEY=minioadmin
ROOMLER__S3__SECRET_KEY=minioadmin
ROOMLER__S3__BUCKET=roomler2
ROOMLER__S3__REGION=us-east-1

# mediasoup
ROOMLER__MEDIASOUP__NUM_WORKERS=2
ROOMLER__MEDIASOUP__LISTEN_IP=0.0.0.0
ROOMLER__MEDIASOUP__ANNOUNCED_IP=127.0.0.1
ROOMLER__MEDIASOUP__RTC_MIN_PORT=40000
ROOMLER__MEDIASOUP__RTC_MAX_PORT=49999

# TURN server
ROOMLER__TURN__URL=turn:localhost:3478
ROOMLER__TURN__USERNAME=roomler
ROOMLER__TURN__PASSWORD=roomler_turn_pass

# Claude API (for document recognition)
ROOMLER__CLAUDE__API_KEY=
ROOMLER__CLAUDE__MODEL=claude-sonnet-4-5-20250929
ROOMLER__CLAUDE__MAX_TOKENS=4096
